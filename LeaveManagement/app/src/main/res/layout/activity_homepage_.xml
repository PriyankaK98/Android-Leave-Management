<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.priyanka.leavemanagement.Homepage_Activity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvResult"
            android:layout_marginLeft="15dp"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp"
            android:fontFamily="serif"


            android:text="* There are total 12 casual Leaves.One for each month but if they are pending you can take it accordingly.\n\n
*Casual leaves can be taken in the form of Half day or Full day leave.\n\n
* Medical Leaves in case of emergencies.\n\n
* Maternity Leave is granted for three months.\n\n
* Maternity leave is applicable only for ladies staff and for the staff having experience more than 2 years."
            android:elegantTextHeight="true"
            android:textColor="#008080"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvWel"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#008B8B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Welcome"
            android:fontFamily="serif"/>

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigationheader"
        app:itemTextColor="#008B8B"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>