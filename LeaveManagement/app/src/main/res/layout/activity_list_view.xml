<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.priyanka.leavemanagement.ListViewActivity">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teachers List"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:fontFamily="serif"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lvList"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.72" />

    <Button
        android:id="@+id/btnPdf"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/pdf"
        android:text=""
        android:layout_above="@+id/lvList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.48"
        android:textSize="20sp"
        android:textStyle=""
        android:fontFamily="serif"
        android:layout_marginLeft="50dp"
        android:text="View PDF for Timetable"
        android:layout_alignBaseline="@+id/btnPdf"
        android:layout_alignBottom="@+id/btnPdf"
        android:layout_toStartOf="@+id/btnPdf"
        android:layout_marginEnd="20dp" />


</RelativeLayout>
